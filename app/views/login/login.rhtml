<div class="depot-form">
  <fieldset>
    <legend>Lüften giriş yapınız.</legend>

    <% form_tag do %>
      <p>
        <label for="name">Kullanıcı Adı:</label>
        <%= text_field_tag :name, params[:name] %>
      </p>

      <p>
        <label for="password">Şifre:</label>
        <%= password_field_tag :password, params[:password] %>
      </p>
  
      <p>
        <%= submit_tag "Giriş" %>
      </p>
    <% end %>
  </fieldset>
</div>
