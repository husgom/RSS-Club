<h1>Yeni Kullanıcı Oluşturma</h1>

  <% form_for :user, :url => { :action=>"create" } do |f| %>
  <%= f.error_messages %>

  <div class="section">
    <h2>Temel Bilgiler</h2>
    <div class="container">
        <div class="label">Adı Soyadı</div>
        <%=f.text_field :contact_name%><br>
        <div class="label">Kullanıcı Adı</div>
        <%=f.text_field :name%><br>
        <div class="label">Şifre</div>
        <%=f.password_field :password%><br>
        <div class="label">Şifre Kontrol</div>
        <%=f.password_field :password_confirmation%><br>
        <div class="label">E-posta</div>
        <%=f.text_field :email%><br>
    </div>
  </div>

<div class="buttons">
  <%= image_submit_tag("save.gif") %>
</div>
<% end %>
