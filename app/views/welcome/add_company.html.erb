<h1>Yeni Firma Oluşturma</h1>

  <% form_for :company, :url => { :action=>"create_company" } do |f| %>
  <%= f.error_messages %>

<div class="section">
  <h2>Temel Bilgiler</h2>
  <div class="container">
    <div class="label">Firma Adı: </div>
    <%= f.text_field :name %>
  </div>
</div>

  <div class="section">
    <h2>Kullanıcı Bilgileri</h2>
    <div class="container">
        <% fields_for "user", @user do |u| %>
            <%= u.error_messages %>
              <div class="label">Adı Soyadı</div>
              <%=u.text_field :contact_name%><br>
              <div class="label">Kullanıcı Adı</div>
              <%=u.text_field :name%><br>
              <div class="label">Şifre</div>
              <%=u.password_field :password%><br>
              <div class="label">Şifre Kontrol</div>
              <%=u.password_field :password_confirmation%><br>
              <div class="label">E-posta</div>
              <%=u.text_field :email%><br>
              <div class="label">Kullanıcı Tipi</div>
              <%= select(:user, :user_type_id, [["Alıcı", 3],["Tedarikçi",2]])  %>
       <% end %>
    </div>
  </div>

<div class="buttons">
  <%= image_submit_tag("save.gif") %>
</div>
<% end %>
